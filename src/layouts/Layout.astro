---
import Header from '../components/Header.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="coffee">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Mateusz Pasek" />
    <title>{title}</title>
  </head>
  <body
    class="bg-base-100 scrollbar-thin scrollbar-thumb-rounded-md scrollbar-track-base-100 scrollbar-thumb-primary"
  >
    <main class="px-10 sm:px-24 xl:px-40 py-5 !font-inter text-center sm:text-left">
      <Header />
      <slot />
    </main>
  </body>
</html>

---
import Header from '../components/Header.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Mateusz Pasek" />
    <title>{title}</title>
  </head>
  <body
    class="bg-black scrollbar-thin scrollbar-thumb-rounded-md scrollbar-track-black scrollbar-thumb-accent"
  >
    <main class="px-10 sm:px-24 xl:px-40 py-5 font-inter text-center sm:text-left">
      <Header />
      <slot />
    </main>
  </body>
  <style is:global>
    :root {
      --accent-color: #f2e9dc;
      --accent-color-50: #f2e9dc50;
      --accent-color-40: #f2e9dc40;
      --accent-color-30: #f2e9dc30;
    }
  </style>
</html>
